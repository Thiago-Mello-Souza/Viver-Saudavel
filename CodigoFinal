            height: 40px;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Estilização para o conteúdo do relatório gerado (output) */
        #report-output {
            background-color: #f9fafb; /* Fundo quase branco para o relatório */
            color: #1f2937; /* Texto escuro */
